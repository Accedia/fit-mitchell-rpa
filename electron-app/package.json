{
  "name": "force-import-technology",
  "appname": "REV Import Technology Manual",
  "productName": "REV Import Technology Manual",
  "version": "1.5.4",
  "homepage": "./",
  "main": "./dist/main.js",
  "description": "Automation for CCC by FIT",
  "scripts": {
    "prebuild:react": "rimraf -rf build",
    "build:react": "npm run --prefix ../react-app build",
    "postbuild:react": "copyfiles -u 3 ../react-app/build/**/* build",
    "prebuild:electron": "rimraf -rf dist",
    "build:electron": "tsc",
    "build": "npm run build:react && npm run build:electron",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "electron": "cross-env NODE_ENV=development electron ./dist/main.js",
    "start": "cross-env NODE_ENV=development electron-forge start",
    "dev:watch": "tsc -w",
    "dev:react": "npm run --prefix ../react-app start",
    "dev": "concurrently \"npm:dev:*\"",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": "https://github.com/Accedia/force-import-technology",
  "author": "Full Impact Technologies",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-wix": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "@electron-forge/publisher-github": "^6.0.0-beta.59",
    "@octokit/types": "^6.25.0",
    "@types/source-map-support": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.2",
    "electron": "^13.1.6",
    "electron-rebuild": "^2.3.5",
    "eslint": "^7.30.0",
    "source-map-support": "^0.5.19",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@nut-tree/nut-js": "^1.7.0",
    "axios": "^0.21.1",
    "concurrently": "^6.2.0",
    "electron-log": "^4.4.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "firebase": "^9.6.10",
    "rimraf": "^3.0.2",
    "update-electron-app": "^2.0.1"
  },
  "files": [
    "./build/**/*",
    "./dist/**/*",
    "./node_modules/**/*"
  ],
  "build": {
    "appId": "ccc.id",
    "mac": {
      "category": "ccc.category"
    },
    "protocols": {
      "name": "ccc-protocol",
      "schemes": [
        "ccc"
      ]
    }
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
